@model ItlaBanking.ViewModels.LoginViewModel
@{
    Layout = null;
}
<html>
<head>
    <title>ITLA * Banking</title>
    <!--Boostrap!-->
    <link href="~/css/EstiloLogin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script>
        function myFunction() {
            var x = document.getElementById("Clave");

            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }

        }
    </script>

</head>
<body class="bg-light container" id="CardViewFormulario">
    
        
        <div class="formLogin">

            <div class="panel shadow-lg p-3 mb-4 bg-white rounded"  style="width: 25rem;">
                <img src="~/images/Itlabank.png" class="card-img-top img-fluid rounded mx-auto d-block" alt="Responsive image">
                <div class="panel-body">

                    <form asp-action="Index">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <div class="row col-lg-3">
                                <label asp-for="Usuario1" class="labelPago ml-2"></label>
                            </div>
                            <input asp-for="Usuario1" class="form-control shadow-sm p-3 bg-white rounded-pill form-control-lg" placeholder="Ingresar Usuario" />
                            <div class="row col-lg-8">
                                <span asp-validation-for="Usuario1" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row col-lg-3">
                                <label asp-for="Clave" class="labelPago ml-2"></label>
                            </div>
                            <input asp-for="Clave"  class="form-control shadow-sm p-3 bg-white rounded-pill form-control-lg" id="Clave" placeholder="Ingresar Contraseña" />
                            <div class="row col-lg-8">
                                <span asp-validation-for="Clave" class="text-danger ml-2"></span>
                                <div class="custom-control custom-switch ml-2">
                                    <input type="checkbox" class="custom-control-input" id="customSwitch1" onclick="myFunction()">
                                    <label class="custom-control-label" for="customSwitch1">Mostar Contraseña.</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <input class="btn btn-outline-success btn-group-lg " type="submit" value="Ingresar">
                        </div>
                    </form>

                </div>

            </div>

    </div>



    <!-- jQuery, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>

