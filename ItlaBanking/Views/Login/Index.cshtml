<body class="bg-light container" id="CardViewFormulario">
    
        
        <div class="formLogin">

            <div class="panel shadow-lg p-3 mb-4 bg-white rounded"  style="width: 25rem;">
                <img src="~/images/Itlabank.png" class="card-img-top img-fluid rounded mx-auto d-block" alt="Responsive image">
                <div class="panel-body">
                    <form>
                        <div class="form-group">
                            <label>User</label>
                            <input class="form-control form-control-lg" placeholder="Username" autofocus>
                            <span class="text-danger">Usuario Invalido</span>
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input class="form-control form-control-lg" placeholder="Password">
                        </div>

                        <div class="d-flex justify-content-center">
                            <input class="btn btn-outline-success btn-group-lg " type="submit" value="ACCESS">
                        </div>
                    </form>

                </div>

            </div>

    </div>



    <!-- jQuery, then Popper.js, then Bootstrap JS -->
