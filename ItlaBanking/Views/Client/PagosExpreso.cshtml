@model ItlaBanking.ViewModels.PagosViewModel
<html>

<body class="bg-light" id="CardViewFormulario">
       

    <div class="container bg-warning border border-white rounded shadow-lg p-1 mb-5 bg-white rounded">

        <div>
            <div class="card-header headNombre rounded border border-secondary shadow-sm p-1 bg-white rounded mb-3">
                <div class="d-flex justify-content-center letterPagos">Pagos Expresos</div>
            </div>

            <form asp-action="PagosExpreso" asp-controller="Client" method="post">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="labelPago ml-3">Número de cuenta del destinatario: </label>
                        <input asp-for="NumeroCuentaPagar" type="number" class="form-control form-control-lg rounded-pill border border-success shadow-sm p-3 bg-white rounded" placeholder="Ingresar número de cuenta">
                        <span asp-validation-for="NumeroCuentaPagar" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="labelPago ml-3">¿Desde que cuenta la quiere pagar?</label>
                        <select asp-for="NumeroCuenta" class="custom-select custom-select-lg mb-3 rounded-pill shadow bg-white rounded border border-success">
                            <option value="0" selected>Seleccionar</option>
                            @foreach (var cuenta in Model.cuenta)
                            {
                                <option value="@cuenta.NumeroCuenta">@cuenta.NumeroCuenta</option>
                            }
                        </select>
                        <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <div class="input-group mb-4 mr-5" style="width:500px;">
                        <div class="input-group-prepend">
                            <span class="input-group-text labelPago">Monto a pagar</span>
                            <span class="input-group-text simboloDinero">$</span>
                        </div>
                        <input asp-for="Monto" type="number" min="0.01" step="0.01" class="form-control rounded-right border border-success shadow-sm p-3" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                        <span asp-validation-for="Monto"></span>

                    </div>

                    </div>
                    <div class="d-flex justify-content-center mt-1 mb-2">
                        <input type="submit" value="Pagar" class="btn btn-outline-success font-weight-bold  shadow-lg rounded w-25">

                    </div>

            </form>



        </div>

    </div>
</body>
</html>

