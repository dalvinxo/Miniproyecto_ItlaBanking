

@{
    Layout = null;
}
<html>
<head>
    <title>Client</title>
    <!--Boostrap!-->
    <link href="~/css/EstiloClient.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</head>
<body class="bg-light" id="CardViewFormulario">

    <header class="container-fluid position-fixed shadow border-bottom bg-light  mb-4 rounded fixed-top">
        <nav class="navbar  navbar-dark">
            <a asp-action="Index" class="navbar-brand align-items-center text-dark">User: </a>
            <div class="form-inline">
                <ul class="nav justify-content-end nav-pills">
                    <li class="nav-item">
                        <a asp-controller="Login" asp-action="Index" class="btn btn-danger btn-sm">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container bg-warning border border-white rounded shadow-sm p-1 mb-5 bg-white rounded" >

        <ul class="nav nav-tabs bg-light">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index">Home</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle active" data-toggle="dropdown" asp-controller="Client" role="button" aria-haspopup="true" aria-expanded="false">Pagos</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item active" asp-action="PagosExpreso">Expreso</a>
                    <a class="dropdown-item" asp-action="PagosTarjeta">Tarjeta de Crédito</a>
                    <a class="dropdown-item" asp-action="PagosPrestamo">Préstamo</a>
                    <a class="dropdown-item" asp-action="PagosBeneficiario">Beneficiario</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link"asp-action="Beneficiario">Beneficiario</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-action="AvanceEfectivo">Avance Efectivo</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Transferencia">Transferencia</a>
            </li>
        </ul>

        <div>
            <div class="d-flex justify-content-center letterPagos">Pagos Expresos</div>
            <hr />

            
            <form>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="labelPago ml-3">Número de cuenta del destinatario: </label>
                        <input type="number" min="0" class="form-control form-control-lg rounded-pill border border-success shadow-sm p-3 bg-white rounded" placeholder="Ingresar número de cuenta">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="labelPago ml-3">Número de cuenta de ahorro: </label>
                        <input type="number" min="0" class="form-control form-control-lg rounded-pill border border-success shadow-sm p-3 bg-white rounded" placeholder="Ingresar número de cuenta">
                    </div>
                </div>


                <div class="input-group mb-3 w-50 ">
                    <div class="input-group-prepend">
                        <span class="input-group-text labelPago">Monto a pagar</span>
                        <span class="input-group-text simboloDinero">$</span>
                    </div>
                    <input type="number" min="0.01" step="0.01" class="form-control rounded-right border border-success shadow-sm p-3" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    <div class="ml-2">
                        <button class="btn btn-success" type="submit">Pagar</button>
                    </div>

                </div>

            </form>



        </div>

     </div>


    <!-- jQuery, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>

