@model ItlaBanking.ViewModels.AvanceEfectivoViewModel
<body class="bg-light" id="CardViewFormulario">

    <div class="container bg-warning border border-white rounded shadow-lg p-1 mb-5 bg-white rounded">

        <div>
            <div class="card-header headNombre rounded border border-secondary shadow-sm p-1 bg-white rounded mb-3">
                <div class="d-flex justify-content-center letterPagos">Avances de efectivos</div>
            </div>


            <form asp-action="AvanceEfectivo" asp-controller="Client" method="post">
                <div asp-validation-summary="All" class="text-danger">
                    <div class=" text-success h4">@ViewBag.exists</div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="labelPago ml-3">Seleccionar  tarjeta de crédito:</label>
                        <select asp-for="NumeroTarjeta" class="custom-select custom-select-lg mb-3 rounded-pill shadow bg-white rounded border border-success">
                            <option value="" selected>Seleccionar</option>
                            @foreach (var tarjeta in Model.tarjetas)
                            {
                                <option value="@tarjeta.NumeroTarjeta">@tarjeta.NumeroTarjeta</option>
                            }
                        </select>
                        <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="labelPago ml-3">Seleccionar cuenta de ahorro:</label>
                        <select asp-for="NumeroCuenta" class="custom-select custom-select-lg mb-3 rounded-pill shadow bg-white rounded border border-success">
                            <option value="" selected>Seleccionar</option>
                            @foreach (var cuenta in Model.cuenta)
                            {
                                <option value="@cuenta.NumeroCuenta">@cuenta.NumeroCuenta</option>
                            }
                        </select>
                        <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
                    </div>

                </div>

                <div class="d-flex justify-content-center p-1">
                    <div class="form-group">
                        <label class="labelPago d-flex justify-content-center">Avance de efectivo: </label>
                        <input asp-for="Monto" type="number" min="0.01" step="0.01" class="form-control form-control-lg rounded-pill border border-secondary shadow-lg p-3  bg-white rounded" placeholder="Ingresar Monto">
                    </div>

                </div>
                <input asp-for="TipoTransaccion" type="hidden" value="2" />
                <div class="d-flex justify-content-center mb-2 p-1">
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-info font-weight-bold btn-lg shadow-lg rounded-pill W-25" type="submit">Transferir Dinero</button>

                </div>
            </form>
        </div>
    </div>
</body>